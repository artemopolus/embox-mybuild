{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Embuild",
	"patterns": [
		{
			"include": "#expression"
		},
		{
			"include": "#headers"
		},
		{
			"include": "#module_headers"
		},
		{
			"include": "#constants-numeric"
		},
		{
			"include": "#module_functions"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"expression": {
      			"patterns": [
				    {"include": "#keywords" },
					{"include": "#paren-expression" },
					{"include": "#strings" },
					{"include": "#vars"},
					{"include": "#comments"}
				]
    		},
		"headers":{
			"patterns": [
				{"name":"keyword.control.package.embuild","match": "\\b(package)\\b"},
				{"name":"keyword.control.abstract.embuild","match": "\\b(abstract)\\b"},
				{"name":"keyword.control.module.embuild","match": "\\b(module)\\b"}
			]	
		},
		"module_functions":{
			"patterns": [
				{"name":"entity.name.selector.embuild", "match": "\\b(extends)\\b"}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.embuild",
					"match": "\\b(false|true)\\b"
				},
				{
					"name":"keyword.operator",
					"match": "\\b(source|depends|option)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.embuild",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.embuild",
					"match": "\\\\."
				}
			]
		},
		"paren-expression": {
				"name": "expression.group",
      			"begin": "\\{",
      			"end": "\\}",
      			"beginCaptures": {
        			"0": { "name": "punctuation.paren.open" }
      			},
      			"endCaptures": {
        			"0": { "name": "punctuation.paren.close" }
      			},
      			"patterns": [{ "include": "#expression" }]
    		},
		"constants-numeric": {
		      "patterns": [{
			        "name": "constant.numeric",
			        "match": "(?<=(\\s|'|/|\\.|\\=))(\\d)(\\d*)"
		      }]
		},
		"operators":{
			"patterns": [
				{"name":"keyword.operator","match": "[=*]"}
			]
		},
		"vars":{
      			"patterns": [
					{ "include": "#paren-vars" },
					{ "include": "#strings" },
					{"include": "#operators"},
					{"include": "#comments"},
					{"include": "#constants-numeric"}
				]
		},
		"paren-vars":{
			"begin": "\\(",
			"end": "\\)",
      			"beginCaptures": {
        			"0": { "name": "punctuation.paren.open" }
      			},
      			"endCaptures": {
        			"0": { "name": "punctuation.paren.close" }
      			},
      			"name": "vars.group",
      			"patterns": [{ "include": "#vars" }]
		},
		"comments": {
			"patterns": [{
				"name": "comment.line.double-slash.embuild",
				"match": "//.*"
			}]
		},
		"module_headers": {
			"name": "meta.function.SolidcamGPP",
			"begin": "@.*\\S",
			"beginCaptures": {
				"0": { 
					"patterns": [{
						"name": "entity.name.tag",
						"match": "@"
					},
					{
						"name": "entity.name.function.embuild",
						"match": "[^@]*(?=\\()|[^@]*(?<!\\))$"
					}]
				 }
			  },
			"end": "\\s",
			"endCaptures": {
				"0": { "name": "entity.name.tag"}
			  }
		}
	},
	"scopeName": "source.mybuild"
}